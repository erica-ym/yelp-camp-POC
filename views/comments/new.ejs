<% include ../partials/header %> 

<!--action and method match that of the POST route where you'll push data to database -->
    
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add New Comment to <%=campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST"> <!--create route submit as POST to this URL --> 
                <div class=form-group>
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment text"> <!--use name in route to grab data from req.body-->
                </div> <!-- this is a better way to name, within a comment object --> 
                <div class=form-group>
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class=form-group>
                    <button class="btn btn-lg btn-primary btn-block">Submit your campground!</button>
                </div>
            </form>
            <a href="/campgrounds">See all campgrounds!</a>
        </div>
        
    </div>   
</div>

<% include ../partials/footer %>