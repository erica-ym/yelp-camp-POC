<% include ../partials/header %> <!--don't include / in front of partials
/ would mean to go back to root directory-->
    <div class="container">
        <header class="jumbotron">
            <div class="container">
            <h1>This is YelpCamp.</h1>
            <p>The best way to find your next adventure.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add your new campground!</a>
            </p>
            </div> 
        </header>
        
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Most Popular Camp Sites</h3>
            </div>
        </div>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;"> <!-- IMPORTANT PROPERTY TO MAKE GRID ADAPT --> 
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
        </div>
        
    </div>


<% include ../partials/footer %>
