<% include ../partials/header %> 

<!--action and method match that of the POST route where you'll push data to database -->
    
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class=form-group>
                    <input class="form-control" type="text" name="name" placeholder="name"> <!--use name in route to grab data from req.body-->
                </div>
                <div class=form-group>
                    <input class="form-control" type="text" name="imageURL" placeholder="image URL">
                </div>
                <div class=form-group>
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class=form-group>
                    <button class="btn btn-lg btn-primary btn-block">Submit your campground!</button>
                </div>
            </form>
            <a href="/campgrounds">See all campgrounds!</a>
        </div>
        
    </div>   
</div>

<% include ../partials/footer %>